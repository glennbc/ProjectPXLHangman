<Window x:Class="WplHangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WplHangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image  x:Name="Hangman" Margin="10" Width="180" Source="1.png"></Image>
        <StackPanel Width="400" HorizontalAlignment="Left">
            <WrapPanel Margin="20" Height="250" VerticalAlignment="Center" >
                <Label Margin="10" Content="Geef een geheim woord in" x:Name="LblText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
            </WrapPanel>
            <WrapPanel Height="100" VerticalAlignment="Bottom">
                <TextBox Margin="20" x:Name="TxtInput" Width="350" Height="50"/>
            </WrapPanel>
        </StackPanel>

        <StackPanel>
           
        </StackPanel>
          

      
      
   
        <StackPanel Width="300" HorizontalAlignment="Right">
            <WrapPanel Height="400" VerticalAlignment="Stretch" HorizontalAlignment="Right">
                <Button Width="200" Height="100" Margin="10" x:Name="BtnRaad" Content="Raad" Click="BtnRaad_Click"/>
                <Button Width="200" Height="100" Margin="10" x:Name="BtnNieuw" Content="Nieuw spel" Click="BtnNieuw_Click"></Button>
                <Button Width="200" Height="100" Margin="10" x:Name="BtnVerberg" Content="Verberg woord" Click="BtnVerberg_Click"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
